@using RunGroupWebApp.Data.Enum
@using RunGroupWebApp.ViewModel
@model CreateClubViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="navbar-container">
</div>
<div class="main-container">
    <section class="space-sm">
        <div class="container">
            <div class="row mb-5">
                <!--end of col-->
            </div>
            <!--end of row-->
            <div class="row flex-md-row card card-md">
                <div class="card-body bg-secondary">
                    <div class="text-center mb-2">
                        <h1 class="h2 mb-2">Create your own running club</h1>
                        <span>Bring together runners in your community</span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6 col-lg-5">
                            <form method="post" asp-action="Create" enctype="multipart/form-data">
                              
                                <div class="form-row form-group my-2">
                                    <div class="col my-1 border-0 ">
                                        <input asp-for="Title" class="form-control form-control-md border-0 bg-info" placeholder="Title" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="col my-1">
                                        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control form-control-md bg-light">
                                            <option>--Select Category--</option>
                                        </select>
                                        <span asp-validation-for="ClubCategory" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col my-1">
                                        <textarea asp-for="Description" rows="3" cols="4" class="form-control form-control-md bg-light" placeholder="Description" >
                                            </textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col my-1">
                                        <input asp-for="Address.Street" class="form-control form-control-md" placeholder="Street" />
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group">
                                    <div class="col my-1">
                                        <input asp-for="Address.City" class="form-control form-control-md" placeholder="City" />
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Address.State" required class="form-control form-control-md" placeholder="State" />
                                        <span asp-validation-for="Address.State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group my-2">
                                    <div class="col my-1 border-bottom border-0 border-dark">
                                       <input asp-for="Image" type="file" required class="form-control form-control-md border-success bg-opacity-10" placeholder="Image" />

                                        @*<input asp-for="Image"  required class="form-control form-control-md border-success bg-opacity-10" placeholder="Image" />*@
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row form-group text-center">
                                    <div class="col my-1">
                                        <button class="btn btn-block btn-success btn-md" type="submit">Create Account</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
</div>